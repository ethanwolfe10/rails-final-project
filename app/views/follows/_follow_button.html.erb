<% if user_profile != current_user %>
    
    <% if current_user.followings.include?(user_profile) %>
        <%= button_to "Unfollow", user_follow_path(user_profile, follow_record(user_profile)), method: :delete %>
    <% else %>
        <%= button_to "Follow", user_follows_path(user_profile) %>
    <% end %>
<% end %>