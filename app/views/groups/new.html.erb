<%= form_tag groups_path do %>
    
    <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= hidden_field_tag :'group[mod_id]', current_user.id %> 
    
    <div class="field<%= ' field_with_errors' if @group.errors[:name].any? %>">
        <label>Group Name: </label>
        <%= text_field_tag :'group[name]' %>
        <br>
    </div>
    
    <div class="field<%= ' field_with_errors' if @group.errors[:bio].any? %>">
        <label>Group Bio: </label>
        <%= text_field_tag :'group[bio]' %>
        <br>
    </div>
    <%= submit_tag "Submit"%>
<% end %>
    