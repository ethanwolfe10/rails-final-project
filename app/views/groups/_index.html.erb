<% all_user_groups(user, true).each do |group| %>
    <div>
        <%= link_to group.name, group_path(group) %>
        <br>
        Moderator: <%= link_to who_is_mod(group).username, user_path(who_is_mod(group)) %>
        <br>
        Members: 
        <% group.subscribers.each do |user| %>
            <%= link_to user.username, user_path(user) %>
        <% end %>
    </div>
    <br>
<% end %>
    