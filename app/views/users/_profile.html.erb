<h1>Profile Page</h1>
<%= user_profile.display_name %>
<%= user_profile.username %>
<%= user_profile.bio %>
<br>
<%= user_profile.followers.count %> <%= link_to 'Followers', user_follows_path(user_profile, :query => 'followers') %> |
<%= user_profile.followings.count %> <%= link_to 'Following', user_follows_path(user_profile) %>

<% if user_profile != current_user %>
    <%= render 'follows/follow_button', user_profile: user_profile %>
<% end %>
<br>


<% if user_profile == current_user %>
    <%= link_to "Edit Profile", edit_user_path %>
    <br>

    <%= link_to "Create New Group", new_group_path %>
    <br>

    <h1> Pending Invites </h1>

    <% all_user_groups(user_profile, true).each do |group| %>
        <%= group.name %><br>
        <%= group.id %><br>
    <% end %>
<% end %>

<h1> Joined Groups </h1>

<%= render partial: 'groups/index', locals: {user: user_profile} %>
<br>




